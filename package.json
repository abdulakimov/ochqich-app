{
  "name": "ochqich-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w apps/api",
    "dev:api": "npm run dev -w apps/api",
    "dev:dashboard": "npm run dev -w apps/dashboard",
    "build": "npm run build -w packages/shared && npm run build -w packages/sdk-node && npm run build -w apps/api && npm run build -w apps/dashboard",
    "build:api": "npm run build -w apps/api",
    "build:dashboard": "npm run build -w apps/dashboard",
    "prisma:generate": "npm run prisma:generate -w apps/api",
    "prisma:migrate": "npm run prisma:migrate -w apps/api",
    "prisma:deploy": "npm run prisma:deploy -w apps/api"
  }
}
